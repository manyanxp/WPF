<UserControl x:Class="WpfApp4.BatteryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4"
             mc:Ignorable="d" 
             Height="50" Width="100">
    <Grid Width="auto" Height="auto">
        <Viewbox>
            <Grid>
                <Polyline x:Name="batteryFrame" Fill="Transparent" Points="3,3 75,3 75,15 96,15 96,35 75,35 75,46 3,46, 3,0" Stroke="Orange" StrokeThickness="7" />
                <Polyline x:Name="batteryMin" Fill="Transparent" Points="20,12 20,38" Stroke="Orange" StrokeThickness="10" />
                <Polyline x:Name="batteryMid" Fill="Transparent" Points="40,12 40,38" Stroke="Orange" StrokeThickness="10" />
                <Polyline x:Name="batteryMax"  Fill="Transparent" Points="60,12 60,38" Stroke="Orange" StrokeThickness="10" />
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
